
# database (postgresql with timescaledb)
POSTGRES_USER=trading_bot
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=trading_bot
POSTGRES_PORT=5432

# full database url 
DATABASE_URL=postgres://trading_bot:your_secure_postgres_password_here@localhost:5432/trading_bot?sslmode=disable

# redis (caching, rate limiting, pub/sub)
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_URL=redis://:your_secure_redis_password_here@localhost:6379/0

# security - master encryption key
# generate with: openssl rand -base64 32
# this key encrypts all user api keys - back it up securely!
MASTER_ENCRYPTION_KEY=your_32_byte_base64_encoded_key_here

# telegram bot
# get from @BotFather on telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# discord bot
# get from discord developer portal: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_discord_app_id_here

# binance api (for the bot's own monitoring - optional)
# user keys are stored encrypted per-user
BINANCE_TESTNET=true
BINANCE_TESTNET_API_URL=https://testnet.binance.vision
BINANCE_TESTNET_WS_URL=wss://testnet.binance.vision/ws
BINANCE_MAINNET_API_URL=https://api.binance.com
BINANCE_MAINNET_WS_URL=wss://stream.binance.com:9443/ws

# claude ai (anthropic)
# get from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# service ports
GO_BOT_PORT=8080
RUST_GRPC_PORT=50051
ML_SERVICE_PORT=8000

# logging
LOG_LEVEL=info
RUST_LOG=info

# trading defaults
DEFAULT_CONFIDENCE_THRESHOLD=80
MAX_DAILY_NOTIFICATIONS=10
SCANNER_INTERVAL_MINUTES=5
OPPORTUNITY_EXPIRY_MINUTES=15

# rate limits
BINANCE_RATE_LIMIT_PER_MINUTE=1200
CLAUDE_RATE_LIMIT_PER_MINUTE=60

# monitoring
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
# GRAFANA_ADMIN_PASSWORD=your_grafana_password_here
